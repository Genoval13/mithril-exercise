{
  "env": {
    "node": true
  },
  "parserOptions": {
      "ecmaVersion": 6,
      "ecmaFeatures": {
          "modules": true
      }
  },
  "globals": {},
  "rules": {
    "comma-dangle": 2,
    "no-unreachable": 2,
    "no-var": 2,
    "no-unused-vars": 2,
    "semi": 2,
    "quotes": [2, "single"],
    "object-shorthand": 2,
    "prefer-arrow-callback": 2,
    "prefer-const": 2,
    "prefer-template": 2
  }
}
